@using WebStoreUI.Models
@using WebStoreUI.HTMLHelpers
@model BooksListViewModel




@{
    ViewBag.Title = "Books";
}

@foreach (var p in @Model.Books)
{
    <div>
        <h3>@p.Name</h3>
        <p>
            @p.Description
        </p>
        <h4>@p.Price.ToString("# $")</h4>
    </div>
}

<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { Page = x }))
</div>


